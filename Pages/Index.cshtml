<div class="contact-form-section" id="contactUs">
    <div class="contact-form-section-wrapper">
        <div class="container">
            <div class="row gx-5 contact-form-section-row">
                <div class="col-lg-6 offset-lg-0 col-md-8 offset-md-2 col-10 offset-1">
                    <!--
                    contact form - start
                    -->
                    <div class="contact-form drop-shadow-2">
                        <div class="contact-form-wrapper">
                            <div class="section-heading section-heading-2 center">
                                <div class="sub-heading c-purple upper ls-1">
                                    <i class="las la-envelope"></i>
                                    <h5>contact</h5>
                                </div>
                                <div class="main-heading c-dark">
                                    <h1>Write message</h1>
                                </div>
                            </div>
                            <form asp-page-handler="AddContactUs" method="post" enctype="multipart/form-data">


                                @(Html.DevExtreme().Form<HomeService.Models.ContactUs>()
                            .Items(items =>
                            {


                            items.AddSimple().IsRequired(true).Template(@<text>
                                          <div class="form-floating">
                                             <div class="input form-control">
                                 @(Html.DevExtreme().TextBoxFor(s => s.contactUs.FullName).Placeholder("Full Name"))
                                               </div>
                                            </div>
                                        </text>);

                            items.AddSimple().Template(@<text>
                                          <div class="form-floating">
                                             <div class="input form-control">
                                 @(Html.DevExtreme().TextBoxFor(s => s.contactUs.Email).Placeholder("Email"))
                                               </div>
                                            </div>
                                        </text>);
                            items.AddSimple().Template(@<text>
                                          <div class="form-floating">
                                             <div class="input form-control">
                                 @(Html.DevExtreme().TextBoxFor(s => s.contactUs.Mobile).Placeholder("Mobile"))
                                               </div>
                                            </div>
                                        </text>);


                            items.AddSimple().Template(@<text>
                                          <div class="form-floating">
                                             <div class="input form-control">
                                 @(Html.DevExtreme().TextBoxFor(s => s.contactUs.Msg).Placeholder("Message"))
                                               </div>
                                            </div>
                                        </text>);

                            })
)
                                <button type="submit" class="button button-3">
                                    <span class="button-inner">
                                        <span class="button-content">
                                            <span class="text">Submit Reply</span>
                                        </span>
                                    </span>
                                </button>

                            </form>
                        </div>
                    </div>
                    <!--
                    contact form - end
                    -->
                </div>
                <div class="col-lg-6 offset-lg-0 col-md-8 offset-md-2 col-10 offset-1">
                    <!--
                    newsletter form - start
                    -->
                    <div class="contact-form contact-form-1 drop-shadow-2">
                        <div class="contact-form-wrapper">
                            <div class="section-heading section-heading-2 center">
                                <div class="sub-heading c-purple upper ls-1">
                                    <i class="las la-envelope-open"></i>
                                    <h5>subscribe</h5>
                                </div>
                                <div class="main-heading c-dark">
                                    <h1>Our newsletter</h1>
                                </div>
                            </div>
                            <div class="contact-form-icon">
                                <i class="las la-envelope-open-text"></i>
                            </div>
                            <form id="Newsletter" name="Newsletter" asp-page-handler="AddNewsletter" method="post" enctype="multipart/form-data">
                                @(Html.DevExtreme().Form<HomeService.Models.Newsletter>()
                            .Items(items =>
                            {


                            items.AddSimple().IsRequired(true).Template(@<text>
                                          <div class="form-floating">
                                             <div class="input form-control">
                                 @(Html.DevExtreme().TextBoxFor(s => s.newsletter.Email).Placeholder("Email"))
                                               </div>
                                            </div>
                                        </text>);


                            })
)


                                <button type="submit" class="button button-2">
                                    <span class="button-inner">
                                        <span class="button-content">
                                            <span class="text">Subscribe</span>
                                        </span>
                                    </span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <!--
                    newsletter form - end
                    -->
                </div>
            </div>
        </div>
    </div>
</div>
