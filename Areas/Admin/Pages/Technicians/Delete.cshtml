@page
@model HomeService.Areas.Admin.Pages.Technicians.DeleteModel
@{
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Details"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">

                        <div style="padding-top:20px;padding-left:20px;padding-right:20px">

                            <div class="row">
                                <div class="col-md-12 col-lg-6 mt-4">
                                    <h4> @sharedResource["Informations"] </h4>
                                    <hr />

                                    <div class="d-flex justify-content-between">
                                        <div> @sharedResource["TlAr"] </div>
                                        <div> @Model.technician.FullNameAr </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["TlEn"]  </div>
                                        <div> @Model.technician.FullNameEn </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["Nationality"]  </div>
                                        <div> @Model.technician.Nationality.NationalityTlAr </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["Email"]  </div>
                                        <div> @Model.technician.Email </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["Tele"]  </div>
                                        <div> @Model.technician.Tele </div>
                                    </div>

                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["Mobile"]  </div>
                                        <div> @Model.technician.Mobile </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["Remarks"]  </div>
                                        <div> @Model.technician.Remarks </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div>@sharedResource["Picture"]  </div>
                                        <div class="Details_img">
                                            <img style="border-radius: 13%;" class="img-fluid" src="~/Images/Technician/@Model.technician.Pic" />
                                        </div>
                                    </div>
                                </div>

                                    
                            </div>

                        </div>
                        <form method="post">
                            <div class="invers">
                                @(Html.DevExtreme().Button()
                                .ID("button")
                                .Text(sharedResource["Delete"])
                                .Type(ButtonType.Danger)
                                .UseSubmitBehavior(true)

                                )
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
  
