@page
@model HomeService.Areas.Admin.Pages.Technicians.EditModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">

                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Edit"]  @sharedResource["Technician"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary="All"></div>

                            <input type="hidden" name="TechnicianId" asp-for="technician.TechnicianId" value="@Model.technician.TechnicianId" />
                            <input type="hidden" name="Pic" asp-for="technician.Pic" value="@Model.technician.Pic" />
                            <input type="hidden" name="Email" asp-for="technician.Email" value="@Model.technician.Email" />


                            @(Html.DevExtreme().Form<HomeService.Models.Technician>().ColCount(2)
         .FormData(Model.technician)

    .Items(items => {

    items.AddSimpleFor(m => m.FullNameAr).IsRequired(true).Label(k => k.Text(sharedResource["TlAr"]));
    items.AddSimpleFor(m => m.FullNameEn).IsRequired(true).Label(k => k.Text(sharedResource["TlEn"]));
    items.AddSimpleFor(m => m.FullAddress).IsRequired(true).Label(k => k.Text(sharedResource["Address"]));
    items.AddSimpleFor(m => m.CivilId).IsRequired(true).Label(k => k.Text(sharedResource["CivilId"]));
    items.AddSimpleFor(m => m.NationalityId).IsRequired(true).Label(k => k.Text(sharedResource["Nationality"]))
.Editor(e => e
.Lookup()
.DataSource(ds => ds.WebApi().Controller("Technicians").LoadAction("NationalityLookup").Key("Value"))
.ValueExpr("Value")
.DisplayExpr("Text")
);



    items.AddSimpleFor(m => m.PassportNo).IsRequired(true).Label(k => k.Text(sharedResource["PassportNo"]));
    items.AddSimpleFor(m => m.Mobile).IsRequired(true).Label(k => k.Text(sharedResource["Mobile"]));
    items.AddSimpleFor(m => m.Tele).IsRequired(true).Label(k => k.Text(sharedResource["Tele"]));
    items.AddSimpleFor(m => m.Remarks).IsRequired(true).Label(k => k.Text(sharedResource["Remarks"])).Editor(c => c.TextArea().Height(150));
    items.AddSimple().Label(k => k.Text(sharedResource["Picture"])).Template(@<text>
                        <div>
                    <img width="250" height="250" src="/Images/Technician/@Model.technician.Pic" alt="Technician Picture"/>
                </div>
                            </text> );
        items.AddSimple().ColSpan(4).Label(k => k.Text(sharedResource["Picture"])).Template(@<text>


                            @(Html.DevExtreme().FileUploader()
                                        .Name("MainImage")
                                        .SelectButtonText(sharedResource["Change_Picture"])
                                        .LabelText("")
                                        .Accept("image/*")
                                        .UploadMode(FileUploadMode.UseForm)
                                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        .Height(100)

                                                        ) </text>);
        items.AddButton()
                     .ColSpan(3)
                     .HorizontalAlignment(HorizontalAlignment.Right)
                     .ButtonOptions(b => b.Text(sharedResource["Save"])
                     .Type(ButtonType.Success)
                     .UseSubmitBehavior(true)).CssClass("invers");
    })
)




                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
