@page
@model HomeService.Areas.Admin.Pages.Customers.IndexModel
@{
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Customers"]
                            <a asp-page="Add" class="btn btn-primary">@sharedResource["Add"]  @sharedResource["Customer"]  </a>
                        </h2>
                    </div>
                    <div class="card-body">

                        @(Html.DevExtreme().DataGrid<HomeService.Models.Customer>()
                        .ID("gridContainer")

                                             .DataSource(ds => ds.Mvc()
.Controller("Customers")
.LoadAction("Get")
.InsertAction("Post")
.UpdateAction("Put")
.DeleteAction("Delete")
.Key("CustomerId")
)
                        .Columns(columns => {
                            columns.AddFor(m => m.Pic)
            .Width(100)
            .AllowFiltering(false)
            .AllowSorting(false)
            .CellTemplate(@<text>
                <div>
                    <img width="50" height="50" src="/Images/Customer/<%- value %>" alt=" Customer image"/>
                </div>
            </text>).Caption(sharedResource["Picture"]);

                        columns.Add().Caption(sharedResource["TlAr"]).Visible(false);
                        columns.AddFor(m => m.FullNameAr).Caption(sharedResource["TlAr"]).Width(200);
                        columns.AddFor(m => m.FullNameEn).Caption(sharedResource["TlEn"]).Width(200);
                        columns.AddFor(m => m.Email).Caption(sharedResource["Email"]).Width(200);
                        columns.AddFor(m => m.Area.City.CityTlAr).Caption(sharedResource["City"]).Width(100);
                        columns.AddFor(m => m.Area.AreaTlAr).Caption(sharedResource["Area"]).Width(100);
                        columns.AddFor(m => m.Nationality.NationalityTlAr).Caption(sharedResource["Nationality"]).Width(100);

                        columns.Add().Caption(sharedResource["Actions"]).Width(200).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary btn-sm"  href="/Admin/Customers/Details?id=<%- data.CustomerId %>"> <i class="fas fa-eye"></i> </a>
                         <a class="btn btn-danger btn-sm" href="/Admin/Customers/Delete?id=<%- data.CustomerId %>">  <i class="fas fa-trash"></i> </a>

                                <a class="btn btn-success btn-sm"  href="/Admin/Customers/Edit?id=<%- data.CustomerId %>">  <i class="fas fa-edit"></i> </a>
                        <a class="btn btn-primary btn-sm"  href="/Admin/Customers/Contracts?id=<%- data.CustomerId %>">@sharedResource["Contracts"] </a>

                            </div>
                            </text>).Width(200);

                        })
                        .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
        .HeaderFilter(headerFilter => headerFilter.Visible(true)).ShowColumnLines(false)
                            .ShowRowLines(true)
                            .RowAlternationEnabled(true)
                            .AllowColumnReordering(true)
                            .ShowColumnLines(true)
                            .ShowRowLines(true)
                            .ShowBorders(true)
                            .SearchPanel(searchPanel => searchPanel
                            .Visible(true)
                            .Width(240)
                            .Placeholder(sharedResource["SearchTxt"]))
                            .RemoteOperations(true)
                            .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>