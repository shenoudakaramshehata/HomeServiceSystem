                                            )
                                            .Color("#79cac4")
                                            .Type(SeriesType.Bar)
                                            .ArgumentField("day")
                                            .ValueField("contract")
                                            )
                                            .Title(sharedResource["DailyContracts"])
                                            .ArgumentAxis(a => a
                                            .Label(l => l
                                            .CustomizeText(@<text>
                                                    function() {
                                                   return new Date(this.valueText).toLocaleDateString('pt-PT');
